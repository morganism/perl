package Element;

sub new
{
	my $class = shift;
	my $self = shift;

	$self->{_name} = "default";


	bless $self, $class;
	return $self;
}

sub addChild
{
	my $self = shift;
	my $childName = shift;
	my $childElementName = shift;
	push @{$self->{children}}, {name => $childName, element_name => $childElementName}; # so we can get the Element name from the child name
}

sub getChildren
{
	$self = shift;
	return @{$self->{children}};
}

sub getChildByName
{
	my $self = shift;
	my $childName = shift;
	my $child;
	foreach my $c (@{$self->{children}})
	{
		return $c->{element_name} if ($c->{name} eq $childName);
	}
}

sub getName
{
	my $self => shift;
	return $self->{_name};
}

sub setName
{
	my $self = shift;
	my $name = shift;
	$self->{_name} = $name;
}

sub getElementName
{
	my $self = shift;
	return $self->{element_name};
}

sub getTagClass
{
	my $self = shift;
	return $self->{tag_class};
}

sub getLocationType
{
	my $self = shift;
	return $self->{location_type};
}

sub isLeaf
{
	my $self = shift;
	return $self->{is_leaf};
}


